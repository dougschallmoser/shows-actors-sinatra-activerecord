<h1>Show #<%= @show.id %></h1>
<h2>"<%= @show.title %>"</h2>
<em><%= @show.category %></em>

<p><h3>Actors:</h3>
    <ul><% @show.actors.each do |actor| %>
        <h4><li><%= actor.name %> plays "<%= actor.character_name %>"</li></h4>
        <% end %>
    </ul>
</p>
<br>
<h3>To edit this show, click <a href="/shows/<%= @show.id %>/edit">HERE</a>!</h3>
<h3>To delete this show, click <a href="/shows/<%= @show.id %>/delete">HERE</a>!</h3>